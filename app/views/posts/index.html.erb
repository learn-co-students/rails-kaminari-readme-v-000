<h1>Blog Posts!</h1>
<!-- page_entried_info adds contextual information like which posts are being displayed -->
<%= page_entries_info @posts %> 
<%= paginate @posts, window: 2 %>
<% @posts.each do |post| %>
  <div>
    <p><%= link_to post.title, post_path(post) %><br>
    by: <%= post.author.name %></p>
    <p><%= post.description %></p>
  </div>
<% end %>
